{
  "name": "spot_ui_config",
  "version": "1.1.0",
  "description": "Apache Spot :: UI :: Config",
  "scripts": {
    "watch-plugins": "watchify js/plugins.js -o js/plugins.bundle.min.js -v -d",
    "build-all": "npm run build-plugins",
    "build-plugins": "browserify js/plugins.js | uglifyjs -cm > js/plugins.bundle.min.js"
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jquery": "global:$",
    "d3": "global:d3",
    "react": "global:React",
    "react-dom": "global:ReactDOM",
    "react-dom/server": "global:ReactDOMServer"
  }
}
